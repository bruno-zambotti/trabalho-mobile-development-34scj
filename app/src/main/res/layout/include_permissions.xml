<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/containerPermission"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_permission"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="32dp"
              android:paddingRight="32dp">

    <TextView
            android:id="@+id/tvTitleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            tools:text="@string/request_permission_title" />

    <TextView
            android:id="@+id/tvMessageDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:minWidth="820dp"
            android:padding="8dp"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:text="@string/request_permission_message" />

    <Button
            android:textColor="@color/colorTextSecondary"
            style="@style/custom_button_light"
            android:id="@+id/btPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/request_permission_button" />
</LinearLayout>